<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cuahnag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_cuahang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/no_image"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_cuahang"
                android:background="@drawable/bg_verified"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:paddingRight="12dp"
                android:paddingBottom="2.1dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shield" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/icielplanton"
                    android:paddingLeft="5dp"
                    android:paddingRight="2dp"
                    android:text="Verified"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tenquan"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/icielplanton"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="Tên quán ăn"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/icielplanton"
            android:padding="5dp"
            android:text="Địa chỉ"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                app:srcCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/icielplanton"
                android:padding="5dp"
                android:text="Rating"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                app:srcCompat="@drawable/ic_khoangcach" />

            <TextView
                android:id="@+id/tv_khoangcach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/icielplanton"
                android:padding="5dp"
                android:text="Khoảng cách"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_add_text"
            android:fontFamily="@font/icielplanton"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:text="FREESHIP"
            android:textAlignment="center"
            android:textColor="@color/profilePrimaryDark"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>



