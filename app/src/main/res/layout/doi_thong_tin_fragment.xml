<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DoiThongTinFragment">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Cập nhật thông tin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/ed_ChangeName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Họ tên"
            android:background="@drawable/border_add_text"
            android:inputType="text"
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/ed_ChangeAddress"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_add_text"
            android:hint="Địa chỉ"
            android:layout_marginBottom="15dp"
            android:inputType="text"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/ed_ChangePhone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_add_text"
            android:hint="Số điện thoại"
            android:gravity="center_vertical"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/ed_ChangeNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_add_text"
            android:textSize="16dp"
            android:hint="Ngày sinh"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="10dp" />
        <Button
            android:id="@+id/btn_Change"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/icielplanton"
            android:text="xác nhận"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>